		<building>
			<shipPart>true</shipPart>
			<turretGunDef>ShipTurret_SpinalMountTopLaser</turretGunDef>
			<turretBurstWarmupTime>.5</turretBurstWarmupTime>
			<turretBurstCooldownTime>15.0</turretBurstCooldownTime>
		</building>
		<size>(5,4)</size>
	</ThingDef>
