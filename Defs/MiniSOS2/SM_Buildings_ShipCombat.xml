	<!-- small Artillery -->
	<ThingDef ParentName="ShipTurretBuilding">
		<defName>AOTC-SM-ShipTurret_ACISmall</defName>
		<label>Stable Matter small cannon turret</label>
		<designatorDropdown>ShipTurrets_AC</designatorDropdown>
		<description>A starfighter turret that rapidly accelerates uranium slugs. Requires ammunition, but costs zero energy and very little heat to fire. Only useful at close range. Can be set to intercept torpedoes rather than firing at the enemy ship.\n\nMust be connected to a pilot/tactical console or AI core via the heat network.\nRequires sufficient stored power and heat capacity to function. \n\nThis particular model is much smaller, but deals drastically less damage with less efficiency.</description>
			<graphicData>
			<texPath>Things/Building/Ship/HardpointYellow</texPath>
			<drawSize>(1,1)</drawSize>
		</graphicData>
		<comps>
			<li Class="CompProperties_Stunnable">
				<affectedDamageDefs>
					<li>EMP</li>
				</affectedDamageDefs>
			</li>
			<li Class="SaveOurShip2.CompProps_ShipHeat">
				<compClass>SaveOurShip2.CompShipHeat</compClass>
				<showOnRoof>true</showOnRoof>
				<heatPerPulse>1</heatPerPulse>
				<energyToFire>0</energyToFire>
				<optRange>50</optRange>
				<maxRange>50</maxRange>
				<projectileSpeed>4</projectileSpeed>
				<pointDefense>true</pointDefense>
				<groundDefense>true</groundDefense>
				<groundProjectile>Bullet_Ground_ACI_Small</groundProjectile>
				<groundMissRadius>4</groundMissRadius>
				<threat>5</threat>
			</li>
			<li Class="CompProperties_Power">
				<compClass>CompPowerTrader</compClass>
				<basePowerConsumption>125</basePowerConsumption>
				<transmitsPower>true</transmitsPower>
			</li>
			<li Class="CompProperties_Refuelable">
				<fuelLabel>Shots until rearm</fuelLabel>
				<fuelGizmoLabel>Uranium slugs</fuelGizmoLabel>
				<outOfFuelMessage>Cannot shoot: No slugs</outOfFuelMessage>
				<fuelFilter>
					<thingDefs>
						<li>Uranium</li>
					</thingDefs>
				</fuelFilter>
				<fuelCapacity>20</fuelCapacity>
				<initialFuelPercent>1</initialFuelPercent>
				<autoRefuelPercent>0.9</autoRefuelPercent>
				<targetFuelLevelConfigurable>true</targetFuelLevelConfigurable>
				<showAllowAutoRefuelToggle>true</showAllowAutoRefuelToggle>
				<showFuelGizmo>true</showFuelGizmo>
				<minimumFueledThreshold>1</minimumFueledThreshold>
				<consumeFuelOnlyWhenUsed>true</consumeFuelOnlyWhenUsed>
				<fuelIconPath>UI/Overlays/Barrel</fuelIconPath>
			</li>
			<li Class="CompProperties_Flickable"/>
		</comps>
		<building>
			<turretGunDef>ShipTurret_ACITop</turretGunDef>
			<turretBurstWarmupTime>0.05</turretBurstWarmupTime>
			<turretBurstCooldownTime>0.5</turretBurstCooldownTime>
			<turretTopDrawSize>1</turretTopDrawSize>
		</building>
		<costList>
			<SNS_StableMatter>50</SNS_StableMatter>
			<Uranium>25</Uranium>
			<Plasteel>40</Plasteel>
			<ComponentSpacer>1</ComponentSpacer>
		</costList>
		<uiIconPath>Things/Building/Ship/TurretACI_SmSmall_MenuIcon</uiIconPath>
		<researchPrerequisites>
			<li>ShipTurretAC</li>
		</researchPrerequisites>
		<size>(1,1)</size>
	</ThingDef>
