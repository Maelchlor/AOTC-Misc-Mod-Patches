<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <HediffDef ParentName="DiseaseBase">
    <defName>AOTC_PSISupress</defName>
    <description>Supression of conciousness via disrupting mental signals. victims report inability to assembly any thought. The body remains functional however.</description>
    <label>Processing Supression</label>
    <comps>
      <li Class="HediffCompProperties_Disappears">
        <disappearsAfterTicks>5000~120000</disappearsAfterTicks>
        <showRemainingTime>true</showRemainingTime>
      </li>
    </comps>
    <stages>
      <li>
        <label>Minor</label>
        <minSeverity>0.25</minSeverity>
        <capMods>
          <li>
            <capacity>Consciousness</capacity>
            <setMax>0.75</setMax>
          </li>
        </capMods>
      </li>
      <li>
        <label>Moderate</label>
        <minSeverity>0.3</minSeverity>
        <capMods>
          <li>
            <capacity>Consciousness</capacity>
            <setMax>0.3</setMax>
          </li>
        </capMods>
      </li>
      <li>
        <label>Major</label>
        <minSeverity>0.6</minSeverity>
        <capMods>
          <li>
            <capacity>Consciousness</capacity>
            <setMax>0.4</setMax>
          </li>
        </capMods>
      </li>
      <li>
        <label>Extreme</label>
        <minSeverity>1.0</minSeverity>
        <capMods>
          <li>
            <capacity>Consciousness</capacity>
            <setMax>0.1</setMax>
          </li>
        </capMods>
      </li>
    </stages>
  </HediffDef>
</Defs>